{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["eslint:recommended", "airbnb-base"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "import/extensions": [
        2,
        {
          "mjs": "ignorePackages"
        }
      ],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "implicit-arrow-linebreak": ["error", "below"]
    }
  }
  